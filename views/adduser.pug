html

	head
		script(src="https://code.jquery.com/jquery-3.2.1.js"
			  integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
			  crossorigin="anonymous")
		script(src='/scripts/adduser.js')

		link(rel='shortcut icon', type='image/png', href='/images/favicon.png')
		link(rel='stylesheet', href='/styles/adduser.css')

		title Add User

	body

		include navbar.pug

		div#main

			div#addform

				p You can add a new user here

				form(id='adduser' method='POST' autocomplete='off' action='/adduser')

					label(for='firstname' style={display:'none'}) Each name field can consist of at least a single letter or two space separated words containing - or '
					input(class='validation' type='text' name='firstname' placeholder='Firstname')
					input(class='validation' type='text' name='lastname' placeholder='Lastname')

					label(for='email' style={display:'none'}) something@mail.com or some11_thing00@contact.co.uk
					input(class='validation' type='email' name='email' placeholder='Email')
					input#submit(type='submit' value='Submit')

				h2 #{message}

style.

	.nav li {
		background: radial-gradient(rgba(195,195,194,1),rgba(160,160,150,0.8));
	}

	.nav li:hover {
		background: radial-gradient(rgba(250,250,250,0.9),rgba(230,230,230,0.8));
	}

	.nav li:hover a {
		color: rgba(77,174,210,0.8);
	}